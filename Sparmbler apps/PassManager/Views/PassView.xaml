<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:con="clr-namespace:PassManager.ViewConverters"
             xmlns:res="clr-namespace:PassManager.Properties"
             x:Class="PassManager.Views.PassView"
             Title="{Static res:Resources.PasswordViewName}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding Passwords}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Editor Text="{Binding Name}"/>
                            <Label Grid.Column="1" Text="{Binding Key, Converter={con:PasswordViewConverter}}"/>
                            <ImageButton Grid.Column="2" MaximumHeightRequest="20" MaximumWidthRequest="20" Source="{AppThemeBinding Dark=copy_dark.png, Light=copy_light.png}" Command="{Binding CopyPassToClipboardCommand}"/>
                            <ImageButton Grid.Column="3" MaximumHeightRequest="20" MaximumWidthRequest="20" Source="{AppThemeBinding Dark=genpass_dark.png, Light=genpass_light.png}" Command="{Binding GeneratePasswordCommand}"/>
                            <ImageButton Grid.Column="4" MaximumHeightRequest="20" MaximumWidthRequest="20" Source="{AppThemeBinding Dark=remove_dark.png, Light=remove_light.png}" Command="{Binding RemoveCommand}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ImageButton MaximumHeightRequest="20" MaximumWidthRequest="20" Source="{AppThemeBinding Dark=add_dark.png, Light=add_light.png}" Command="{Binding AddKeyCommand}"/>
            <ImageButton Grid.Column="1" MaximumHeightRequest="20" MaximumWidthRequest="20" Source="{AppThemeBinding Dark=save_dark.png, Light=save_light.png}" Command="{Binding SaveCommand}"/>
        </Grid>
    </Grid>
</ContentPage>