<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassManager.Views.CreatePassView"
             Title="CreatePassView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Text="{Binding Password}"/>
        <ImageButton Grid.Column="1" Source="update.png" MaximumHeightRequest="20" MaximumWidthRequest="20" Command="{Binding GeneratePassCommand}"/>
        <ImageButton Grid.Column="2" Source="save.png"  MaximumHeightRequest="20" MaximumWidthRequest="20" Command="{Binding SavePasswordCommand}"/>
    </Grid>
</ContentPage>